@{
  Layout = "_Layout";
}
@model URegistrar.Models.Course

<h2>Edit a Course</h2>
<h4>Edit the following course: @Html.DisplayFor(model => model.CourseName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CourseId)

  @Html.LabelFor(model => model.CourseName)
  @Html.TextBoxFor(model => model.CourseName)

  @Html.LabelFor(model => model.CourseNumber)
  @Html.TextBoxFor(model => model.CourseNumber)
  <input type="submit" value="Save Edits" />
}
<p>@Html.ActionLink("Return to Course Index", "Index")</p>
<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</p>
@* <p>@Html.ActionLink("Delete Student", "Delete", new { id = Model.StudentId })</p> *@
<p>@Html.ActionLink("Return to Course Details page", "Details", new { id = Model.CourseId } )</p>
<p>@Html.ActionLink("Return to Homepage","Home","Home")</p>