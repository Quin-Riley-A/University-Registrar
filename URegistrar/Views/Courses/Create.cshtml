@{
  Layout = "_Layout";
}
@model URegistrar.Models.Course

<h2>Add a Course</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CourseId)

  @Html.LabelFor(model => model.CourseName)
  @Html.TextBoxFor(model => model.CourseName)

  @Html.LabelFor(model => model.CourseNumber)
  @Html.TextBoxFor(model => model.CourseNumber)
  <input type="submit" value="Add new course" />
}
<p>@Html.ActionLink("Return to Course Index", "Index")</p>
<p>@Html.ActionLink("Return to Homepage","Home","Home")</p>