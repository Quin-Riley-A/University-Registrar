@{
  Layout = "_Layout";
}
@model URegistrar.Models.Student

<h2>Edit Student</h2>
<h4>Edit the following Student: @Html.DisplayFor(model => model.StudentName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)

  @Html.LabelFor(model => model.StudentName)
  @Html.TextBoxFor(model => model.StudentName)

  @Html.LabelFor(model => model.StartDate)
  @Html.TextBoxFor(model => model.StartDate)
  <input type="submit" value="Save Edits" />
}
<p>@Html.ActionLink("Return to Student Index", "Index")</p>
<p>@Html.ActionLink("Return to Student Details page","Details", new { id = Model.StudentId } )</p>
<p>@Html.ActionLink("Return to Homepage","Home","Home")</p>