@{
  Layout = "_Layout";
}

@using URegistrar.Models;
<div>
  <h1>Students</h1>
</div>

@if (@Model.Count == 0)
{
  <h3>No students have been added yet!</h3>
}

<ul>
  @foreach(Student student in Model)
  {
    <li>@Html.ActionLink($"{student.StudentName}", "CourseLoad", new { id = student.StudentId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a New Student", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("See Course List", "Index", "Courses")</p>